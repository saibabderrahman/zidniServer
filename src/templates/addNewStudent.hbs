            color: #333;
            padding: 1em 0;
        }

        header #logo {
            text-align: center;
        }

        header #logo img {
            width: 120px;
            height: auto;
        }

        main {
            padding: 2% 5%;
        }

        footer {
            background: #ffffff;
            color: #333;
            padding: 1em 0;
            text-align: center;
        }

        button {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }
           .button {
      display: inline-block;
      background-color: #007bff;
      color: #ffffff;
      text-decoration: none;
      padding: 12px 30px;
      border-radius: 4px;
      font-size: 16px;
    }

        @media (max-width: 768px) {
            header #logo img {
                width: 80px;
            }
        }
    </style>

</head>

